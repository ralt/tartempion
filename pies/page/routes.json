{
    "get": [
        { "/": "home" },
        { "/pages": "index" },
        { "/pages/new": {
            "method": "createForm",
            "middlewares": [
                "requireLogin"
            ]}
        },
        { "/pages/:pid": "read" },
        { "/pages/edit/:pid": {
            "method": "updateForm",
            "middlewares": [
                "requireLogin"
            ]}
        },
        { "/pages/delete/:pid": {
            "method": "deleteForm",
            "middlewares": [
                "requireLogin"
            ]}
        }
    ],
    "post": [
        { "/pages/new": {
            "method": "create",
            "middlewares": [
                "requireLogin"
            ]}
        },
        { "/pages/edit/:pid": {
            "method": "update",
            "middlewares": [
                "requireLogin"
            ]}
        },
        { "/pages/delete/:pid": {
            "method": "delete",
            "middlewares": [
                "requireLogin"
            ]}
        }
    ]
}
