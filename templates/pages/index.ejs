<% if ( typeof message !== 'undefined' ) { %>
<div class="message">
    <%= message %>
</div>
<% } %>
<% if ( typeof pages !== 'undefined' ) { %>
    <% pages.forEach( function( page ) { %>
    <div class="page">
        <h2><%= page.title %></h2>
        <div class="content">
            <%= page.body %>
        </div>
    </div>
    <% }); %>
<% } %>
